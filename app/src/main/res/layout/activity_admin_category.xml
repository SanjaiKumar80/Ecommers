<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/Slogan_Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mar25"
        android:text="@string/add_new_product"
        android:textAlignment="center"
        android:textSize="@dimen/size26"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Slogan_Category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mrg45"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tShirts"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/tshirts" />

        <ImageView
            android:id="@+id/sportstShirts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sports" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/female_dresses" />

        <ImageView
            android:id="@+id/sweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sweather" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mrg45"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/glasses" />

        <ImageView
            android:id="@+id/purses_bags"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/purses_bags" />

        <ImageView
            android:id="@+id/hats"
            android:layout_width="@dimen/mar90"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/hats" />

        <ImageView
            android:id="@+id/shoess"
            android:layout_width="@dimen/mar70"
            android:layout_height="@dimen/mar80"
            android:layout_marginStart="@dimen/mar15"
            android:src="@drawable/shoess" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mrg45"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headphoness"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/headphoness" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/laptops" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="@dimen/mar90"
            android:layout_height="@dimen/mar80"
            android:src="@drawable/watches" />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="@dimen/mar70"
            android:layout_height="@dimen/mar80"
            android:layout_marginStart="@dimen/mar15"
            android:src="@drawable/mobiles" />
    </LinearLayout>
</RelativeLayout>